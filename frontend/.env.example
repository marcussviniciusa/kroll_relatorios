# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api

# Authentication
REACT_APP_JWT_STORAGE_KEY=kroll_auth_token

# Meta (Facebook) Integration
REACT_APP_META_APP_ID=your_meta_app_id
REACT_APP_META_API_VERSION=v18.0
REACT_APP_META_SCOPES=email,pages_show_list,pages_read_engagement,ads_read
REACT_APP_META_AUTH_TYPE=rerequest
REACT_APP_META_INTEGRATION_ENABLED=true

# Google Analytics Integration
REACT_APP_GA_MEASUREMENT_ID=your_ga_measurement_id

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ADVANCED_ANALYTICS=true

# Misc
REACT_APP_DEFAULT_DATE_FORMAT=dd/MM/yyyy
REACT_APP_DEFAULT_LANGUAGE=pt-BR
