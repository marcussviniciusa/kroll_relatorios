# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kroll_relatorios
DB_USER=postgres
DB_PASSWORD=postgres

# Configurações de Autenticação
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d

# Configurações de API
API_BASE_URL=http://localhost:3000/api

# Configurações do Frontend
REACT_APP_API_BASE_URL=http://localhost:3000/api
REACT_APP_META_APP_ID=your_meta_app_id

# Configurações de Integrações
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret

# Configurações do Google Analytics
GOOGLE_ANALYTICS_CLIENT_ID=your_google_client_id
GOOGLE_ANALYTICS_CLIENT_SECRET=your_google_client_secret

# Configurações de E-mail
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@krollrelatorios.com

# Feature Flags
FEATURE_NOTIFICATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
